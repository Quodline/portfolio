---
import { Image } from 'astro:assets';
import avatar from '@/images/avatar.png';
import { linkedIn } from '@/constants/links';
import SocialLink from './banner/SocialLink.astro';
import { buttonVariants } from '@/components/ui/Button';
import { Github, Linkedin, Twitter } from 'lucide-react';
---

<section
  class="my-6 flex flex-1 flex-col gap-8 lg:mx-24 lg:my-auto lg:max-h-[24rem] lg:flex-row"
>
  <div class="mx-6 flex flex-col gap-8 lg:mx-0 lg:basis-1/2 lg:gap-16">
    <Image
      src={avatar}
      class="h-16 w-16 rounded-full border-double lg:h-32 lg:w-32 lg:border-[12px]"
      alt="Ore's picture"
    />
    <h1 class="flex flex-col text-3xl font-semibold md:text-5xl lg:gap-8">
      <span>Hello!</span>
      <span>I'm <span class="font-bold">Ore Adeleye</span></span>
    </h1>
  </div>
  <div class="flex flex-1 flex-col gap-16">
    <div class="mx-6 flex flex-col gap-2 lg:mx-0 lg:gap-8">
      <h2 class="text-2xl font-semibold md:text-4xl">Architect of the Web</h2>
      <div class="text-neutral-500 md:text-2xl">
        Bridging gaps and building bridges<br />
        across the full tech stack
      </div>
    </div>
    <div
      class="flex flex-1 items-end justify-center gap-8 pb-[20%] lg:flex-grow-0 lg:justify-start lg:pb-6"
    >
      <a href="#" class={buttonVariants({ size: 'lg' })} target="_blank"
        >See my works</a
      >
      <a
        href={linkedIn}
        class={buttonVariants({ variant: 'outline', size: 'lg' })}
        target="_blank"
      >
        Talk with me
      </a>
    </div>
  </div>
  <div class="absolute right-8 flex flex-col gap-4">
    <SocialLink href="#" title="GitHub"><Github /></SocialLink>
    <SocialLink href="#" title="LinkedIn"><Linkedin /></SocialLink>
    <SocialLink href="#" title="Twitter"><Twitter /></SocialLink>
  </div>
</section>
