---
import { Image } from 'astro:assets';
const { link, title, provider, logo } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="flex items-center gap-4 border-b py-8 last:border-none"
>
  <figure class="inline-grid h-12 w-12 place-items-center rounded-md bg-white">
    <Image src={logo} alt={`${provider} logo`} class="h-8" />
  </figure>
  <div>
    <h3 class="font-semibold">{title}</h3>
    <div class="text-neutral-500">{provider}</div>
  </div>
</a>
